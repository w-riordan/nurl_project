{% extends 'base.html.twig' %}
{% block tilte %}Recent Nurls{% endblock %}
{% block body %}
    <h1>Nurls list</h1>

    {% for nurl in nurls %}
        <div class="nurl_summary">
            <a class="block_link" href="{{ path('nurl_show', {'id':nurl.id}) }}">
                {{ nurl.title }}
            </a>
            <div>
                <p>
                {{ nurl.notes }}
                </p>
            </div>
            <a class="block_link" href="http://{{ nurl.url }}">Link</a>
        </div>
    {% endfor %}

    <ul>
        <li>
            <a href="{{ path('nurl_new') }}">Create a new nurl</a>
        </li>
    </ul>
{% endblock %}
