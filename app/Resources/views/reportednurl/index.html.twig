{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reported Nurls</h1>

    {% for pend in reportedNurls %}
        <div class="nurl_summary">
            <a class="block_link" href="{{ path('reportednurl_show', {'id':pend.id}) }}">
                {{ pend.nurl.title }}
            </a>
            <div>
                <p>
                    {{ pend.nurl.notes }}
                </p>
            </div>
            <a class="block_link" href="http://{{ pend.nurl.url }}">Link</a>
        </div>
    {% endfor %}

{% endblock %}
